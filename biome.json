{
    "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
    "files": {
        "includes": [
            "**",
            "!**/node_modules",
            "!**/.next"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}