{
  "name": "conflict-bars",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx scripts/migrate-data.ts",
    "migrate:force": "tsx scripts/migrate-data.ts --force",
    "migrate:cleanup": "tsx scripts/migrate-remove-artist-column.ts",
    "migrate:events": "tsx scripts/migrate-events.ts",
    "migrate:language": "CONVEX_URL=$(grep -o 'https://[^\"]*' .env.local | head -1) tsx scripts/migrate-language.ts",
    "db:clear": "tsx scripts/clear-songs.ts",
    "reset-data": "npm run db:clear && npm run migrate",
    "reset-data:force": "npm run db:clear && npm run migrate:force"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "convex": "^1.28.0",
    "next": "16.0.0",
    "nodemailer": "^7.0.10",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^20.19.23",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^17.2.3",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  }
}
