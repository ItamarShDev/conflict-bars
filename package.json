{
	"name": "conflict-bars",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build --turbopack",
		"start": "next start",
		"lint": "biome check .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"typecheck": "tsc --noEmit",
		"migrate": "tsx scripts/migrate-data.ts",
		"migrate:force": "tsx scripts/migrate-data.ts --force",
		"migrate:cleanup": "tsx scripts/migrate-remove-artist-column.ts",
		"migrate:events": "tsx scripts/migrate-events.ts",
		"migrate:language": "CONVEX_URL=$(grep -o 'https://[^\"]*' .env.local | head -1) tsx scripts/migrate-language.ts",
		"db:clear": "tsx scripts/clear-songs.ts",
		"reset-data": "npm run db:clear && npm run migrate",
		"reset-data:force": "npm run db:clear && npm run migrate:force"
	},
	"dependencies": {
		"@vercel/analytics": "^1.6.1",
		"convex": "^1.30.0",
		"glob": "^13.0.0",
		"iconv-lite": "^0.7.2",
		"next": "16.1.0",
		"nodemailer": "^7.0.11",
		"react": "19.2.3",
		"react-dom": "19.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^20.19.25",
		"@types/nodemailer": "^7.0.4",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitest/ui": "^3.2.4",
		"dotenv": "^17.2.3",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"overrides": {
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3"
	}
}
